@using RevengeApp.Models
@model RevengeApp.Models.Revenge

@{
    ViewData["Title"] = "נקמה חדשה";
}

<div class="create-revenge-page">
    <div class="page-header">
        <h1 class="page-title">
            💄 תכנון נקמה חדשה 🔥
            <small class="page-subtitle">זמן להראות להם מי באמת שולטת כאן!</small>
        </h1>
    </div>

    <div class="revenge-form-container">
        <form asp-action="Create" method="post" class="revenge-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group drama-form-group">
                <label asp-for="Title" class="drama-label">
                    <i class="fas fa-fire"></i> שם הנקמה
                </label>
                <input asp-for="Title" class="form-control drama-input" placeholder="למשל: נקמת השפתון האדום..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group drama-form-group">
                <label asp-for="Description" class="drama-label">
                    <i class="fas fa-scroll"></i> תיאור מפורט של הנקמה
                </label>
                <textarea asp-for="Description" class="form-control drama-textarea" rows="4"
                          placeholder="תאר בפירוט את הנקמה הדרמטית שלך... כל הפרטים החשובים!"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group drama-form-group">
                <label asp-for="Target" class="drama-label">
                    <i class="fas fa-crosshairs"></i> מי הקורבן?
                </label>
                <input asp-for="Target" class="form-control drama-input" placeholder="השם של האדם שמגיע לו/לה..." />
                <span asp-validation-for="Target" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group drama-form-group">
                        <label asp-for="Category" class="drama-label">
                            <i class="fas fa-tags"></i> סוג הנקמה
                        </label>
                        <select asp-for="Category" class="form-control drama-select">
                            <option value="Ex">💔 נקמת אקס</option>
                            <option value="Neighbor">🏠 נקמת שכן</option>
                            <option value="AnnoyingCustomer">😤 נקמת לקוחה מעצבנת</option>
                            <option value="Work">💼 נקמת עבודה</option>
                            <option value="Family">👨‍👩‍👧‍👦 נקמת משפחה</option>
                            <option value="Friend">👯‍♀️ נקמת חברה</option>
                            <option value="Other">🎭 אחר</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group drama-form-group">
                        <label asp-for="DramaLevel" class="drama-label">
                            <i class="fas fa-kiss-wink-heart"></i> רמת דרמתיות (1-5)
                        </label>
                        <select asp-for="DramaLevel" class="form-control drama-select drama-level-select">
                            <option value="1">💋 1 - קלילה</option>
                            <option value="2">💋💋 2 - בינונית</option>
                            <option value="3">💋💋💋 3 - דרמטית</option>
                            <option value="4">💋💋💋💋 4 - מאוד דרמטית</option>
                            <option value="5">💋💋💋💋💋 5 - סופר דרמטית!</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group drama-form-group">
                        <label asp-for="Date" class="drama-label">
                            <i class="fas fa-calendar-alt"></i> תאריך מתוכנן
                        </label>
                        <input asp-for="Date" type="date" class="form-control drama-input" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group drama-form-group">
                        <label asp-for="Status" class="drama-label">
                            <i class="fas fa-flag"></i> סטטוס
                        </label>
                        <select asp-for="Status" class="form-control drama-select">
                            <option value="Planned">🎯 מתוכננת</option>
                            <option value="InProgress">⚡ בביצוע</option>
                            <option value="Completed">✅ הושלמה</option>
                            <option value="Cancelled">❌ בוטלה</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group drama-form-group">
                <label asp-for="Notes" class="drama-label">
                    <i class="fas fa-sticky-note"></i> הערות נוספות
                </label>
                <textarea asp-for="Notes" class="form-control drama-textarea" rows="3"
                          placeholder="רעיונות נוספים, פרטים חשובים, או כל דבר אחר שחשוב לזכור..."></textarea>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-revenge btn-lg">
                    <i class="fas fa-magic"></i> יאללה, בואו נתכנן את הנקמה! 🔥
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-right"></i> חזרה לרשימה
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .create-revenge-page {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .page-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 900;
        color: var(--secondary-gold);
        text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
        margin-bottom: 1rem;
    }

    .page-subtitle {
        display: block;
        font-size: 1.2rem;
        color: var(--sparkle-white);
        font-weight: 400;
        margin-top: 0.5rem;
    }

    .revenge-form-container {
        background: rgba(255,255,255,0.95);
        border-radius: 25px;
        padding: 2.5rem;
        box-shadow: 0 15px 35px rgba(0,0,0,0.3);
        border: 3px solid var(--secondary-gold);
    }

    .drama-form-group {
        margin-bottom: 2rem;
    }

    .drama-label {
        font-weight: bold;
        color: var(--dramatic-red);
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    .drama-input, .drama-select, .drama-textarea {
        border: 2px solid var(--primary-pink);
        border-radius: 15px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .drama-input:focus, .drama-select:focus, .drama-textarea:focus {
            border-color: var(--dramatic-red);
            box-shadow: 0 0 15px rgba(220, 20, 60, 0.3);
            outline: none;
        }

    .drama-textarea {
        resize: vertical;
        min-height: 100px;
    }

    .drama-level-select {
        background: linear-gradient(135deg, rgba(255,20,147,0.1), rgba(255,215,0,0.1));
    }

    .form-actions {
        text-align: center;
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 2px solid var(--secondary-gold);
    }

        .form-actions .btn {
            margin: 0 1rem;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: bold;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .form-actions .btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.3);
            }

    /* רספונסיביות */
    @@media (max-width: 768px) {
        .create-revenge-page

    {
        padding: 1rem;
    }

    .revenge-form-container {
        padding: 1.5rem;
        border-radius: 15px;
    }

    .page-title {
        font-size: 2rem;
    }

    .form-actions .btn {
        display: block;
        width: 100%;
        margin: 0.5rem 0;
    }

    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // הוסף אנימציות דרמטיות
            $('.drama-input, .drama-select, .drama-textarea').on('focus', function() {
                $(this).closest('.drama-form-group').addClass('focused');
            });

            $('.drama-input, .drama-select, .drama-textarea').on('blur', function() {
                $(this).closest('.drama-form-group').removeClass('focused');
            });

            // אפקט מיוחד לרמת דרמתיות
            $('.drama-level-select').on('change', function() {
                var level = $(this).val();
                $(this).removeClass('level-1 level-2 level-3 level-4 level-5');
                $(this).addClass('level-' + level);

                // אפקט נצנוץ
                $(this).closest('.drama-form-group').addClass('sparkle-effect');
                setTimeout(() => {
                    $(this).closest('.drama-form-group').removeClass('sparkle-effect');
                }, 1000);
            });
        });
    </script>
}