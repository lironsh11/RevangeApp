        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-title

    {
        font-size: 2.5rem;
    }

    .hero-subtitle {
        font-size: 1.1rem;
    }

    .kokava-portrait {
        width: 220px;
        height: 220px;
    }

    .hero-stats {
        flex-direction: column;
        align-items: center;
    }

    .stat-card {
        width: 200px;
    }

    .btn-hero {
        display: block;
        margin: 1rem auto;
        width: 80%;
    }

    .recent-revenges-grid {
        grid-template-columns: 1fr;
    }

    .features-grid {
        grid-template-columns: 1fr;
    }

    .quote p {
        font-size: 1.4rem;
    }

    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Quotes carousel
            let currentQuote = 0;
            const quotes = $('.quote');
            const totalQuotes = quotes.length;

            function showNextQuote() {
                $(quotes[currentQuote]).removeClass('active');
                currentQuote = (currentQuote + 1) % totalQuotes;
                $(quotes[currentQuote]).addClass('active');
            }

            // Change quote every 4 seconds
            setInterval(showNextQuote, 4000);

            // Scroll animations
            $(window).on('scroll', function() {
                $('.feature-card, .recent-revenge-card').each(function() {
                    const elementTop = $(this).offset().top;
                    const windowBottom = $(window).scrollTop() + $(window).height();

                    if (elementTop < windowBottom - 50) {
                        $(this).addClass('animate-in');
                    }
                });
            });
        });
    </script>
}