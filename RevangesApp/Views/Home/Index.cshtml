    }

    }

    @@keyframes glow {
        from

    {
        text-shadow: 3px 3px 6px rgba(0,0,0,0.7), 0 0 30px var(--secondary-gold);
    }

    to {
        text-shadow: 3px 3px 6px rgba(0,0,0,0.7), 0 0 40px var(--primary-pink);
    }

    }

    .hero-subtitle {
        font-size: 1.3rem;
        margin-bottom: 3rem;
        line-height: 1.6;
        opacity: 0.95;
    }

    .hero-stats {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin: 3rem 0;
        flex-wrap: wrap;
    }

    .stat-card {
        background: rgba(255,255,255,0.2);
        border-radius: 20px;
        padding: 1.5rem;
        text-align: center;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255,255,255,0.3);
        transition: transform 0.3s ease;
        min-width: 150px;
    }

        .stat-card:hover {
            transform: translateY(-10px) scale(1.05);
        }

        .stat-card h3 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .stat-card p {
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            opacity: 0.9;
        }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 900;
        color: var(--secondary-gold);
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }

    .hero-actions {
        margin-top: 3rem;
    }

    .btn-hero {
        font-size: 1.2rem;
        padding: 15px 30px;
        margin: 0 1rem;
        border-radius: 30px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-revenge {
        background: linear-gradient(45deg, var(--primary-pink), var(--dramatic-red));
        border: none;
        color: white;
        font-weight: bold;
        border-radius: 25px;
        padding: 12px 30px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-revenge:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.4);
            background: linear-gradient(45deg, var(--dramatic-red), var(--primary-pink));
            color: white;
            text-decoration: none;
        }

    .btn-outline-revenge {
        background: transparent;
        border: 3px solid white;
        color: white;
    }

        .btn-outline-revenge:hover {
            background: white;
            color: var(--primary-pink);
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            text-decoration: none;
        }

    /* Recent Revenges Section */
    .recent-revenges-section {
        padding: 4rem 0;
        background: rgba(255,255,255,0.95);
        color: var(--shadow-black);
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 900;
        color: var(--dramatic-red);
        margin-bottom: 3rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .recent-revenges-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .recent-revenge-card {
        background: white;
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        border: 3px solid var(--secondary-gold);
        transition: all 0.3s ease;
        position: relative;
    }

        .recent-revenge-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }

        .recent-revenge-card.status-completed {
            border-left: 8px solid #32cd32;
            background: linear-gradient(135deg, rgba(50,205,50,0.05), rgba(255,215,0,0.05));
        }

        .recent-revenge-card.status-planned {
            border-left: 8px solid #ffa500;
        }

        .recent-revenge-card.status-progress {
            border-left: 8px solid #4169e1;
        }

    .revenge-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

        .revenge-header h4 {
            font-size: 1.3rem;
            font-weight: bold;
            color: var(--dramatic-red);
            margin: 0;
            flex: 1;
        }

    .drama-level {
        display: flex;
        gap: 0.2rem;
    }

    .drama-heart {
        font-size: 1rem;
        animation: pulse 2s infinite;
    }

    .revenge-description {
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 1rem;
        color: #555;
    }

    .revenge-meta {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        font-size: 0.85rem;
        margin-bottom: 1rem;
    }

    .revenge-target, .revenge-date {
        background: rgba(255,20,147,0.1);
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        border: 1px solid rgba(255,20,147,0.2);
    }

    .revenge-status {
        font-weight: bold;
        padding: 0.5rem 1rem;
        border-radius: 15px;
        text-align: center;
        margin-bottom: 1rem;
        background: var(--secondary-gold);
        color: var(--shadow-black);
    }

    .card-actions {
        text-align: center;
    }

    .btn-edit {
        background: #ffa500;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 15px;
        text-decoration: none;
        font-size: 0.85rem;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            background: #ff8c00;
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }

    .view-all-section {
        text-align: center;
    }

    /* No Revenges Home */
    .no-revenges-home {
        padding: 4rem 0;
        background: rgba(255,255,255,0.95);
    }

    .no-revenges-content {
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
        padding: 3rem;
        background: rgba(255,20,147,0.1);
        border-radius: 25px;
        border: 3px solid rgba(255,215,0,0.5);
    }

    .no-revenges-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-20px);
    }

    }

    .no-revenges-content h2 {
        font-size: 2rem;
        color: var(--dramatic-red);
        margin-bottom: 1rem;
    }

    .no-revenges-content p {
        font-size: 1.2rem;
        color: var(--shadow-black);
        margin-bottom: 2rem;
    }

    /* Features Section */
    .home-features {
        padding: 5rem 0;
        background: rgba(255,255,255,0.95);
        color: var(--shadow-black);
    }

    .features-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 900;
        color: var(--dramatic-red);
        margin-bottom: 3rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
    }

    .feature-card {
