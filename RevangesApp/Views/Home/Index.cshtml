            box-shadow: 0 0 40px rgba(255,215,0,1), 0 0 80px rgba(255,20,147,0.8);
        }

    @@keyframes portrait-glow {
        from

    {
        box-shadow: 0 0 20px rgba(255,215,0,0.6), 0 0 40px rgba(255,20,147,0.4);
    }

    to {
